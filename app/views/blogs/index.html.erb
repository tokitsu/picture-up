<h3><%= current_user.name %>のページ</h3>
<% @blogs.each do |blog|%>
<%= blog.user.name %><br>
<%= blog.title%><br>
<%= image_tag blog.image %><br>
<%= blog.content%><br>
<%= link_to "詳細", blog_path(blog.id) %>
<% if current_user.id == blog.user_id %>
<%= link_to "編集", edit_blog_path(blog.id) %>
<%= link_to "削除", blog_path(blog.id), method: :delete, data:{ confirm: '本当に削除していいですか？'}%><br><br>
<% else %><br><br>
<% end %>
<% end %>
<%= link_to "写真をUPする", new_blog_path %><br>
<%= link_to "プロフィールに戻る", user_path(current_user.id) %><br>
<%= link_to "お気に入り一覧", 'blogs/like' %><br>